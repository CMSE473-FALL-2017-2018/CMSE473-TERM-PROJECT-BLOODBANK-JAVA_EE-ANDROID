<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cmse473.bloodbank">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.PanelActivity" />
        <activity android:name=".Activity.RegisterActivity" />
        <activity
            android:name=".Activity.FindDonorActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.FindSeekerActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.ChangeStatusActivity" />
        <activity android:name=".Activity.SeekBloodActivity" />
        <activity android:name=".Activity.HistoryActivity" />
        <activity android:name=".Activity.SettingsActivity"></activity>
    </application>

</manifest>